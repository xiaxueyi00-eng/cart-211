<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>TEST FLASH</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magic/1.1.0/magic.min.css">
</head>

<body>

<h1 id="searchTitle" style="font-size:60px;">SEARCH</h1>

<input id="searchInput" type="text" placeholder="type something...">

<script>
  const input = document.getElementById("searchInput");
  const title = document.getElementById("searchTitle");

  function flashTitle() {
    title.classList.remove("magictime", "flash");
    void title.offsetWidth;
    title.classList.add("magictime", "flash");
  }

  input.addEventListener("input", () => {
    flashTitle();
  });
</script>

</body>
</html>
